@model Certification


<div class="accordion accordion-flush" id="accordionFlushCert-@Model.Id">
    <div class="accordion-item">
        <div class="accordion-header" id="flush-heading-Cert-@Model.Id">
            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#flush-collapse-Cert-@Model.Id" aria-expanded="false" aria-controls="flush-collapse-Cert-@Model.Id">
                <div class="resume-content row">
                    <div class="resume-logo col-md-4">
                        <img src="~/images/@Model.ImageFileName" />
                    </div>
                    <div class="resume-info col-md-8">
                        <p class="title">@Model.Title</p>
                        <p class="location-time">@Model.FromDate.ToString("MMM yyyy") – @(Model.ToDate.ToString("MMM yyyy") == DateTime.Now.ToString("MMM yyyy") ? "Present" : Model.ToDate.ToString("MMM yyyy"))</p>
                    </div>
                </div>
            </button>
        </div>
        <div id="flush-collapse-Cert-@Model.Id" class="accordion-collapse collapse" aria-labelledby="flush-heading-Cert-@Model.Id" data-bs-parent="#accordionFlushCert-@Model.Id">
            @if (Model.Descriptions.Count > 0)
            {
                <div class="accordion-body">
                    <ul>
                        @foreach (string description in Model.Descriptions)
                        {
                            <li>@description</li>
                        }
                    </ul>
                </div>
            }
        </div>
    </div>
</div>
